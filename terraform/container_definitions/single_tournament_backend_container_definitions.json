[ 
   {
      "name" : "single-tournament-backend-container",
      "image" : "${account_id}.dkr.ecr.ap-northeast-1.amazonaws.com/single-tournament-backend:latest",
      "essential" : true,
      "portMappings" : [
         {
            "protocol" : "http",
            "containerPort" : 80,
            "hostPort" : 80
         }
      ],
      "environment" : [
         {
            "name" : "MYSQL_USER",
            "value" : "${db_user}"
         },
         {
            "name" : "MYSQL_PASSWORD",
            "value" : "${db_password}"
         },
         {
            "name" : "MYSQL_ENDPOINT",
            "value" : "${db_endpoint}"
         },
         {
            "name" : "MYSQL_DATABASE",
            "value" : "${db_database}"
         }
      ]
   }
]